<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">Do You Wanna Edit: <%= blog.title %> ?</div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"><!-- action changed to get blog id and add ?_method=PUT to update post trouch update route. Also need to npm install method-override --save -->
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>"><!-- placeholder changed to value to get blog title. So run our javascript to get the blog title and then put that inside the value-->
		</div>
		
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
		
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]"><%= blog.body %></textarea><!-- textarea don't have value atribute everything go between tags --> 
		</div>
		
		<input class="ui violet big basic button" type="submit" value="Press to update!">
	</form>
</div>

<%- include("partials/footer") %>